<!DOCTYPE html>
<html>

<head>
    <title>My Bootstrap Project</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>

<body>
    <div class="container">
        <a href="categories/create">Create Category</a>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">Created at</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                <% for(var i =0;i< categories.length;i++) {%>
                <tr>
                    <th scope="row"><%=i+1%></th>
                    <td><%=categories[i].name%></td>
                    <td><%=categories[i].createdAt.toLocaleString('fr-FR')%></td>
                    <td>
                        <a href="/categories/edit/<%=categories[i]._id%>" class="btn border-shadow update">
                            edit
                        </a>
                        <form method="POST" action="/categories/delete/<%=categories[i]._id%>">
                            <input type="hidden" name="_method" value="DELETE">
                            <button type="submit">delete</button>
                        </form>
                    </td>
                </tr>
                <%}%>
        </tbody>
        </table>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>